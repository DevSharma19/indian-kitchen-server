<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="css/style.css" />
		<link rel="stylesheet" href="css/sign-in.css" />
		<script src="js/sign-in.js" defer></script>
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" />
	</head>

	<body>
		<nav><%- include('../partials/nav-bar') %></nav>

		<!-- iframe with sign in form -->
		<div class="sign-in-form-wrapper">
			<div class="container right-panel-active" id="container">
				<div class="form-container sign-up-container">
					<form action="/sign-up" method="POST">
						<h1 class="sign-in-form">Create Account</h1>
						<div class="social-container">
							<a href="#" class="social sign-in-form"
								><i class="fab fa-facebook-f"></i
							></a>
							<a href="#" class="social sign-in-form"
								><i class="fab fa-google-plus-g"></i
							></a>
							<a href="#" class="social sign-in-form"
								><i class="fab fa-linkedin-in"></i
							></a>
						</div>
						<span>or use your email for registration</span>
						<input name="name" type="text" placeholder="Name" />
						<input name="email" type="email" placeholder="Email" />
						<input name="password" type="password" placeholder="Password" />
						<% if (error) { %>
						<span class="error"><%= error %> </span>
						<% } %>
						<button class="sign-in-form">Sign Up</button>
					</form>
				</div>
				<div class="form-container sign-in-container">
					<form action="/sign-in" method="POST">
						<h1 class="sign-in-form">Sign in</h1>
						<div class="social-container">
							<a href="#" class="social sign-in-form"
								><i class="fab fa-facebook-f"></i
							></a>
							<a href="#" class="social sign-in-form"
								><i class="fab fa-google-plus-g"></i
							></a>
							<a href="#" class="social sign-in-form"
								><i class="fab fa-linkedin-in"></i
							></a>
						</div>
						<span class="sign-in-form">or use your account</span>
						<input name="email" type="email" placeholder="Email" />
						<input name="password" type="password" placeholder="Password" />
						<a class="sign-in-form" href="#">Forgot your password?</a>
						<% if (error) { %>
						<span class="error"><%= error %> </span>
						<% } %>
						<button class="sign-in-form">Sign In</button>
					</form>
				</div>
				<div class="overlay-container">
					<div class="overlay">
						<div class="overlay-panel overlay-left">
							<h1 class="sign-in-form">Welcome Back!</h1>
							<p class="sign-in-form">
								To keep connected with us please login with your personal info
							</p>
							<button class="ghost sign-in-form" id="sign-in">Sign In</button>
						</div>
						<div class="overlay-panel overlay-right">
							<h1 class="sign-in-form">Hello, Friend!</h1>
							<p class="sign-in-form">
								Enter your personal details and start journey with us
							</p>
							<button class="ghost sign-in-form" id="sign-up">Sign Up</button>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Footer -->
		<div class="divider"></div>

		<footer class="footer">
			<div class="footer-container">
				<p>Â© 2022 Indian Kitchen. All rights reserved.</p>
			</div>
		</footer>
	</body>
</html>
