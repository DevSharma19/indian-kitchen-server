	<body>
		<nav><%- include('../partials/nav-bar') %></nav>
		<header><%- include('../partials/title-bar') %></header>

		<main class="page">
			<div class="recipe-page">
				<section class="grid-col-2">
					<img src="/img/NU66NMBU7VAG6IQRAVPNZ6THAI(1).png" alt="placeholder" />
					<div class="box-text">
						<h2 class="text-md"><%= recipe.title%></h2>
						<p class="text-sm"><%= recipe.description %></p>
						<a href="/post" class="btn btn-dark-outline"><%= recipe.tags.region %> </a>
						<a href="/post" class="btn btn-dark-outline"
							><%= recipe.tags.keyIngredient %></a
						>
						<a href="/post" class="btn btn-dark-outline"><%= recipe.tags.mealType %></a>
						<br />
						<a href="/post" class="btn btn-dark-outline"
							><i class="fas fa-thumbs-up"></i
						></a>
						<a href="/post" class="btn btn-dark-outline"
							><i class="fas fa-thumbs-down"></i
						></a>
						<a href="/post" class="btn btn-dark-outline"
							><i class="fas fa-share-alt"></i
						></a>
					</div>
				</section>
				<!-- content -->
				<section class="recipe-content">
					<article>
						<h4>Instructions</h4>
						<% recipe.instructions.forEach((instruction, step) => { %>
						<div class="single-instruction">
							<header>
								<p>step <%= step + 1 %></p>
							</header>
							<p><%= instruction %></p>
						</div>
						<% }) %>
					</article>
					<article class="second-column">
						<div>
							<h4>Ingredients</h4>
							<ul class="recipe-content-list">
								<% recipe.ingredients.forEach((ingredient) => { %>
								<li>
									<p class="single-ingredient"><%= ingredient %></p>
								</li>
								<% }) %>
							</ul>
						</div>
						<div>
							<h4>Tools</h4>
							<ul class="recipe-content-list">
								<% recipe.tools.forEach((tool) => { %>
								<li><p class="single-tool"><%= tool %></p></li>
								<% }) %>
							</ul>
						</div>
					</article>
				</section>
			</div>
		</main>

